<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="contentDescription">

    <!-- LinearLayout:  serves as the single child layout of the top-level parent ScrollView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TextView:  title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side"
            android:layout_marginRight="@dimen/margin_side"
            android:layout_marginTop="@dimen/margin_top"
            android:gravity="center_horizontal"
            android:text="@string/title"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold|italic" />

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_width"
            android:layout_marginLeft="@dimen/margin_side"
            android:layout_marginRight="@dimen/margin_side"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@color/separator_color" />

        <!-- TextView:  subtitle (explanatory paragraph) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_side"
            android:layout_marginRight="@dimen/margin_side"
            android:layout_marginTop="@dimen/margin_top"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:text="@string/subtitle"
            android:textColor="@android:color/black"
            android:textSize="@dimen/subtitle_text_size" />

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_width"
            android:layout_marginLeft="@dimen/margin_side"
            android:layout_marginRight="@dimen/margin_side"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@color/separator_color" />

        <!-- Question 1 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TextView:  question1 -->
            <TextView
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_side"
                android:layout_marginRight="@dimen/margin_side"
                android:layout_marginTop="@dimen/margin_top"
                android:text="@string/questionOne"
                android:textColor="#000000"
                android:textSize="@dimen/question_text_size" />

            <!-- Radio group for question1 answers -->
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question1"
                android:layout_marginLeft="@dimen/margin_side"
                android:layout_marginRight="@dimen/margin_side"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="vertical">

                <!-- RadioButton:  World War I -->
                <RadioButton
                    android:id="@+id/w_w_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/radio_button_color"
                    android:text="@string/world_war_one" />

                <!-- RadioButton:  Mexican-American War -->
                <RadioButton
                    android:id="@+id/mex_am_war"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/radio_button_color"
                    android:text="@string/mexican_american_war" />

                <!-- RadioButton:  Spanish-American War -->
                <RadioButton
                    android:id="@+id/span_am_war"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/radio_button_color"
                    android:text="@string/spanish_american_war" />
            </RadioGroup>

        </RelativeLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_width"
            android:layout_marginLeft="@dimen/margin_side"
            android:layout_marginRight="@dimen/margin_side"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@color/separator_color" />

        <!-- Question 2 -->
