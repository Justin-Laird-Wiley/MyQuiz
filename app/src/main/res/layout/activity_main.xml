                android:id="@+id/question6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_side"
                android:layout_marginRight="@dimen/margin_side"
                android:layout_marginTop="@dimen/margin_top"
                android:text="@string/questionSix"
                android:textColor="#000000"
                android:textSize="@dimen/question_text_size" />

            <!-- CheckBox:  both attended Harvard -->
            <CheckBox
                android:id="@+id/attended_harvard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question6"
                android:layout_marginLeft="@dimen/margin_side"
                android:layout_marginStart="@dimen/margin_side"
                android:layout_marginTop="@dimen/margin_top"
                android:buttonTint="@color/radio_button_color"
                android:text="@string/harvard_grad"
                android:textSize="@dimen/question_text_size" />

            <!-- CheckBox:  both were Assistant Secretary of the Navy -->
